<div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label :progress %>
    <%= form.number_field :progress, step: :any %>
  </div>

  <div class="field">
    <%= form.label :start_at %>
    <%= form.datetime_select :start_at %>
  </div>

  <div class="field">
    <%= form.label :end_at %>
    <%= form.datetime_select :end_at %>
  </div>

  <div class="field">
    <%= form.label :target_weight %>
    <%= form.number_field :target_weight, step: :any %>
  </div>

  <div class="field">
    <%= form.label :current_weight %>
    <%= form.number_field :current_weight, step: :any %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
