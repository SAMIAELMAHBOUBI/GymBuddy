<nav class="navbar">
  <div class="logo">
    <% if user_signed_in? %>
      <%= link_to "GymBuddy", matches_path, class: "logo" %>
    <% else %>
      <%= link_to "GymBuddy", root_path, class: "logo" %>
    <% end %>
  </div>
  <div class="nav">
    <% if user_signed_in? %>
      <%= link_to "Buddies", buddies_profile_matches_path(@user_profile), class: "nav-btn" if @user_profile.present? %>
      <%= link_to "Requests", requests_profile_matches_path(@user_profile), class: "nav-btn" if @user_profile.present? %>
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-btn" %>
      <% if @user_profile.profile_image && @user_profile.profile_image.image.present?%>
          <%= image_tag @user_profile.profile_image.image, width: '40px', height: '40px', class: 'profile-photo-nav', alt: 'Profile Picture' %>
      <% else %>
         <%= image_tag 'default_profile_picture.jpg', width: '40px', height: '40px', class: 'profile-photo-nav', alt: 'Default Profile Picture', crop: :thumb, gravity: :face %>
      <% end %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, class: "nav-btn" %>
    <% end %>
  </div>
</nav>
