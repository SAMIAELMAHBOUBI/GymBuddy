
<body>
  <h1><strong>Find Your Match</strong></h1>
  <% if @profile.blank?%>
    <div>
      <p>Still workin on the component</p>
    </div>
  <%else%>
    <div id="profile-card-container" class="row-container">
      <%= render partial: 'profile_card', locals: { profile: @profile } %>
    </div>
    <br>
    <br><br><br>
    <div class="action-buttons">

  <div class="d-inline">
  <%= form_with url: reject_profile_match_path(@profile, @match), method: :patch, local: true do |form| %>
    <%= form.hidden_field :accepted, value: true %>
    <%= form.submit "Refuse", class: "btn like-btn", id: 'like-btn' %>
  <% end %>
</div>

  <div class="d-inline">
  <%= form_with url: accept_profile_match_path(@profile, @match), method: :patch, local: true do |form| %>
    <%= form.hidden_field :accepted, value: false %>
    <%= form.submit "Accept", class: "btn pass-btn", id: 'dislike-btn' %>
  <% end %>
</div>

</div>

  <%end%>
  <%= render partial: 'shared/footer' %>
</body>
