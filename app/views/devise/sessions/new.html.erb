
  <div class="container">
    <div class="row justify-content-center">
      <div class="sign-in-card">
        <div class="sign-in-card-header">
          <h2 class="text-center">Sign In</h2>
        </div>
        <div class="sign-in-card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="sign-in-form-inputs">
              <div class="field">
                <%= f.label :email, class: "email-label" %>
                <%= f.email_field :email, required: true, autofocus: false, class: "email-input", autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :password, class: "password-label" %>
                <%= f.password_field :password, required: true, autofocus: false, class: "password-input", autocomplete: "current-password" %>
              </div>

              <%# if devise_mapping.rememberable? %>
                <!--<div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Remember me" %>
                </div>-->
              <%# end %>
              <div class="reset-password">
                <%= link_to "Forgot your password ?", new_password_path(resource_name) %>
              </div>
            </div>

            <div class="sign-in-card-action">
              <%= link_to "Sign Up", new_registration_path(resource_name), class: "custom-btn-secondary" %>
              <%= f.submit "Sign In", class: "custom-btn-primary" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
